{
  "version": "1.1",
  "description": "Portfolio affiliate mapping - normalizes assignee names to parent affiliate for reporting",
  "lastUpdated": "2026-01-20",

  "portfolioTree": {
    "description": "Broadcom corporate structure for reference",
    "tree": [
      "Broadcom Inc. (parent)",
      "├── Avago Technologies (merged 2016)",
      "├── LSI Corporation (acquired 2014)",
      "├── Brocade Communications (acquired 2017)",
      "├── CA Technologies (acquired 2018)",
      "├── Symantec Enterprise (acquired 2019)",
      "│   └── Blue Coat Systems (87 patents)",
      "└── VMware (acquired 2023)",
      "    ├── Nicira (acquired by VMware 2012, 1028 patents)",
      "    ├── Carbon Black (acquired by VMware 2019, 35 patents)",
      "    ├── Pivotal Software (acquired by VMware 2019, 211 patents)",
      "    ├── Avi Networks (acquired by VMware 2019, 17 patents)",
      "    ├── Lastline (acquired by VMware 2020, 3 patents)",
      "    └── Nyansa (acquired by VMware 2020, 7 patents)"
    ],
    "notInPortfolio": [
      "LifeLock - stayed with consumer division (NortonLifeLock/Gen Digital), NOT part of Broadcom"
    ]
  },

  "affiliates": {
    "Broadcom": {
      "displayName": "Broadcom",
      "acquiredYear": null,
      "patterns": [
        "Broadcom",
        "Broadcom Inc",
        "Broadcom Corporation"
      ]
    },
    "Avago": {
      "displayName": "Avago Technologies",
      "acquiredYear": 2016,
      "patterns": [
        "Avago",
        "Avago Technologies",
        "Avago Technologies General IP",
        "Avago Technologies International",
        "Avago Technologies Fiber IP",
        "Avago Technologies Wireless"
      ]
    },
    "LSI": {
      "displayName": "LSI Corporation",
      "acquiredYear": 2014,
      "patterns": [
        "LSI Logic",
        "LSI Corporation",
        "LSI"
      ]
    },
    "Brocade": {
      "displayName": "Brocade Communications",
      "acquiredYear": 2017,
      "patterns": [
        "Brocade Communications Systems LLC",
        "Brocade Communications Systems",
        "Brocade Communications, Inc.",
        "BROCADE COMMUNICATIONS, INC.",
        "BROCADE COMMUNIACTIONS SYSTEMS, INC.",
        "Brocade Communications",
        "Brocade"
      ]
    },
    "CA Technologies": {
      "displayName": "CA Technologies",
      "acquiredYear": 2018,
      "patterns": [
        "CA, Inc",
        "CA Technologies",
        "Computer Associates",
        "Computer Associates International"
      ]
    },
    "Symantec": {
      "displayName": "Symantec Enterprise",
      "acquiredYear": 2019,
      "parent": null,
      "subsidiaries": ["Blue Coat"],
      "patterns": [
        "Symantec",
        "Symantec Corporation",
        "Symantec Operating Corporation"
      ],
      "notes": "Only Enterprise Security division acquired by Broadcom. LifeLock/NortonLifeLock stayed with consumer side (now Gen Digital)"
    },
    "Blue Coat": {
      "displayName": "Blue Coat Systems",
      "acquiredYear": 2019,
      "parent": "Symantec",
      "patterns": [
        "Blue Coat Systems, Inc.",
        "Blue Coat Systems",
        "Blue Coat"
      ]
    },
    "VMware": {
      "displayName": "VMware",
      "acquiredYear": 2023,
      "subsidiaries": ["Nicira", "Carbon Black", "Pivotal", "Avi Networks", "Lastline", "Nyansa"],
      "patterns": [
        "VMware LLC",
        "VMware",
        "VMWare",
        "VMware, Inc"
      ]
    },
    "Nicira": {
      "displayName": "Nicira (VMware SDN)",
      "acquiredYear": 2023,
      "parent": "VMware",
      "patterns": [
        "Nicira, Inc",
        "Nicira Inc",
        "Nicira"
      ]
