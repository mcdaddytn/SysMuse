{
  "name": "judicial-transcripts",
  "version": "1.0.0",
  "description": "Judicial Transcripts Parser and Analysis System",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "convert-pdf": "ts-node src/cli/convert-pdf.ts",
    "parse": "ts-node src/cli/parse.ts",
    "parse:phase1": "ts-node src/cli/parse.ts",
    "search": "ts-node src/cli/search.ts",
    "enhanced-search": "ts-node src/cli/enhanced-search.ts",
    "run-all-queries": "ts-node scripts/run-all-queries.ts",
    "api": "ts-node src/api/server.ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:reset": "prisma migrate reset --force",
    "seed": "ts-node src/seed/seedDatabase.ts",
    "phase3": "ts-node src/cli/phase3.ts",
    "run-phase1-reports": "ts-node src/cli/report.ts generate-all",
    "run-phase2-reports": "ts-node src/cli/phase2-report.ts generate-all",
    "es:reset": "ts-node src/scripts/resetElasticsearch.ts",
    "es:reset:sync": "ts-node src/scripts/resetElasticsearch.ts --force --resync",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "setup": "bash scripts/setup.sh"
  },
  "keywords": [
    "judicial",
    "transcripts",
    "parser",
    "elasticsearch",
    "prisma"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.20.0",
    "@elastic/elasticsearch": "^8.12.0",
    "@prisma/client": "v6.13.0",
    "@types/fs-extra": "^11.0.4",
    "@types/pdf-parse": "^1.1.4",
    "cli-table3": "^0.6.5",
    "commander": "^11.1.0",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "fs-extra": "^11.3.1",
    "langchain": "^0.1.25",
    "multer": "^1.4.5-lts.1",
    "mustache": "^4.2.0",
    "pdf-parse": "^1.1.1",
    "pdf-text-extract": "^1.5.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/multer": "^2.0.0",
    "@types/mustache": "^4.2.6",
    "@types/node": "^20.11.16",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prisma": "v6.13.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
