{
  "description": "Configuration for heat map vendor batch generation",
  "version": "2.0",
  "created": "2026-01-21",
  "updated": "2026-01-21",
  "notes": "Redesigned for dual-purpose: evaluate vendor AND validate our scoring methodology",

  "batchSettings": {
    "batchSize": 25,
    "totalBatches": 10,
    "costPerPatent": 25
  },

  "selectionCriteria": {
    "minYearsRemaining": 5,
    "minOverallScore": 30,
    "preferBroadClaims": true
  },

  "batchStrategy": {
    "mode": "interleaved",
    "interleavedPattern": [
      { "type": "high_value_sampled", "name": "High-Value Sampled" },
      { "type": "sector_diversity_no_security", "name": "Sector Diversity" },
      { "type": "high_value_sampled", "name": "High-Value Sampled" },
      { "type": "sector_diversity_no_security", "name": "Sector Diversity" },
      { "type": "high_value_sampled", "name": "High-Value Sampled" },
      { "type": "sector_diversity_no_security", "name": "Sector Diversity" },
      { "type": "sector_diversity_no_security", "name": "Sector Diversity" },
      { "type": "strategic_fill", "name": "Strategic Fill" },
      { "type": "strategic_fill", "name": "Strategic Fill" },
      { "type": "strategic_fill", "name": "Strategic Fill" }
    ],

    "highValueSampled": {
      "description": "Sample across top 100 with sector diversity - not sequential top 25",
      "poolSize": 100,
      "batchCount": 3,
      "sectorSpread": true,
      "notes": "Tests our scoring methodology by spreading top 100 across 3 batches with varied sectors"
    },

    "sectorDiversityNoSecurity": {
      "description": "Top performers from each non-SECURITY super-sector",
      "poolSize": 500,
      "excludeSuperSectors": ["SECURITY"],
      "targetPatentsPerSuperSector": {
        "WIRELESS": 20,
        "SDN_NETWORK": 20,
        "VIRTUALIZATION": 15,
        "VIDEO_STREAMING": 12,
        "COMPUTING": 10,
        "FAULT_TOLERANCE": 8,
        "IMAGING": 5,
        "AI_ML": 4,
        "SEMICONDUCTOR": 4,
        "AUDIO": 2
      },
      "notes": "Emphasize diversity over proximity to top rankings"
    },

    "strategicFill": {
      "description": "Fill remaining from score-sorted pool",
      "selectionMethod": "top_by_score"
    }
  },

  "sectorRotationOrder": [
    "WIRELESS",
    "SDN_NETWORK",
    "VIRTUALIZATION",
    "VIDEO_STREAMING",
    "COMPUTING",
    "FAULT_TOLERANCE",
    "IMAGING",
    "AI_ML",
    "SEMICONDUCTOR",
    "AUDIO",
    "STORAGE"
  ],

  "output": {
    "jsonFile": "heatmap-batches-LATEST.json",
    "csvPrefix": "HEATMAP-BATCH-",
    "exportAllBatchesToCsv": true
  }
}
