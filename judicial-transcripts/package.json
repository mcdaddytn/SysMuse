{
  "name": "judicial-transcripts",
  "version": "1.0.0",
  "description": "Judicial Transcripts Parser and Analysis System",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "parse": "ts-node src/cli/parse.ts",
    "api": "ts-node src/api/server.ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio", 
    "prisma:reset": "prisma migrate reset --force",
    "seed": "ts-node src/seed/seedDatabase.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "setup": "bash scripts/setup.sh"
  },
  "keywords": [
    "judicial",
    "transcripts",
    "parser",
    "elasticsearch",
    "prisma"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.20.0",
    "@elastic/elasticsearch": "^8.12.0",
    "@prisma/client": "^5.10.0",
    "@types/pdf-parse": "^1.1.4",
    "commander": "^11.1.0",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "langchain": "^0.1.25",
    "multer": "^1.4.5-lts.1",
    "pdf-parse": "^1.1.1",
    "pdf-text-extract": "^1.5.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.16",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prisma": "^5.10.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
