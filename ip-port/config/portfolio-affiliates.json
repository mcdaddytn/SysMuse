    "Carbon Black": {
      "displayName": "Carbon Black",
      "acquiredYear": 2023,
      "parent": "VMware",
      "patterns": [
        "Carbon Black",
        "Carbon Black, Inc.",
        "Carbon Black Inc."
      ]
    },
    "Pivotal": {
      "displayName": "Pivotal Software",
      "acquiredYear": 2023,
      "parent": "VMware",
      "patterns": [
        "Pivotal",
        "Pivotal Software",
        "PIVOTAL SOFTWARE",
        "PIVOTAL SOFTWARE, INC.",
        "Pivotal Software, Inc."
      ]
