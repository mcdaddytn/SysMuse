  "notes": {
    "usage": "Use normalizeAffiliate(assignee) to get the affiliate name from raw assignee string",
    "unknown": "Assignees not matching any pattern should be flagged for review",
    "reporting": "Use affiliate field for portfolio breakdown reports"
  }
