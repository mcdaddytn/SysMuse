    "Avi Networks": {
      "displayName": "Avi Networks",
      "acquiredYear": 2023,
      "parent": "VMware",
      "patterns": [
        "Avi Networks"
      ]
    },
    "Lastline": {
      "displayName": "Lastline",
      "acquiredYear": 2023,
      "parent": "VMware",
      "patterns": [
        "Lastline"
      ]
    },
    "Nyansa": {
      "displayName": "Nyansa",
      "acquiredYear": 2023,
      "parent": "VMware",
      "patterns": [
